<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:gravity="center_vertical"
    android:maxWidth="500dp"
    android:minWidth="150dp"
    android:orientation="horizontal">

    <!--    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--        xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginStart="10dp"-->
    <!--        android:layout_marginLeft="10dp"-->
    <!--        android:maxWidth="500dp"-->
    <!--        android:minWidth="150dp">-->

    <ImageView
        android:id="@+id/categoryItemImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/addTaskSpinnerImgContentDescription"
        app:srcCompat="@drawable/ic_category2" />
    <!--    android:layout_marginStart="10dp"-->
    <!--    android:layout_marginLeft="10dp"-->

    <TextView
        android:id="@+id/categoryItemTextView"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="10"
        android:gravity="center"
        android:minWidth="20dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true" />

    <!--    android:layout_marginEnd="10dp"-->
    <!--    android:layout_marginRight="10dp"-->

    <ImageButton
        android:id="@+id/categoryItemImgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:contentDescription="@string/addTask_DeleteImgContentDescription"
        app:srcCompat="@drawable/category_item_delete_img" />

</LinearLayout>