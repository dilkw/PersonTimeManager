<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/itemTask_createTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/tasklist_item_createtime"
                    app:layout_constraintBottom_toTopOf="@+id/itemTask_endTimeText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemTask_endTimeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasklist_item_endtime"
                    app:layout_constraintBottom_toTopOf="@+id/itemTask_stateText"
                    app:layout_constraintStart_toStartOf="@+id/itemTask_createTimeText"
                    app:layout_constraintTop_toBottomOf="@+id/itemTask_createTimeText"
                    app:layout_constraintVertical_bias="0.100000024" />

                <TextView
                    android:id="@+id/itemTask_stateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasklist_item_state"
                    app:layout_constraintBottom_toTopOf="@+id/itemTask_taskText"
                    app:layout_constraintStart_toStartOf="@+id/itemTask_endTimeText"
                    app:layout_constraintTop_toBottomOf="@+id/itemTask_endTimeText"
                    app:layout_constraintVertical_bias="0.19" />

                <TextView
                    android:id="@+id/itemTask_taskText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tasklist_item_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/itemTask_stateText"
                    app:layout_constraintTop_toBottomOf="@+id/itemTask_stateText" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="@string/tasklist_item_icon"
                    android:src="@drawable/ic_dingzi"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>